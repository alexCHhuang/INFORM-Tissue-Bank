 <div class="row">
    <div class="box container">
            <div class="col-lg-12" style="padding: 45px;">
                <hr>
                <h2 class="intro-text text-center">Forgot Password?
                </h2>
                  {{#if success_msg}}
                    <div class="alert alert-success">{{success_msg}}</div>
                  {{/if}}
                <form method="post" action="/users/forgot" class="form-horizontal tex">
                     <div class="col-sm-7 text-center" style="padding-bottom: 15px;">
                      
                     </div>
                      <div class="form-group">
                        <div class="col-sm-6 col-lg-offset-1 col-lg-7">
                          <input type="text" class="form-control" name="email" placeholder="Enter email">
                        </div>
                      </div>
                      
                      <div class="form-group">        
                        <div class="col-sm-offset-1 col-sm-4 col-lg-offset-3">
                          <button type="submit" class="btn btn-info">Reset Password</button>
                        </div>
                      </div>
                </form>
            </div>
    </div>
</div>
